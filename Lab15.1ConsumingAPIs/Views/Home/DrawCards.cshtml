@model Deal
@{
    ViewData["Title"] = "DrawCards";
    int numItems = Model.Cards.Length;
}
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
<h1>Draw Cards</h1>

<ul>

    @for (int i = 0; i < numItems; i++)
    {
        <li>
            <strong>@Model.Cards[i].Value of @Model.Cards[i].Suit</strong><br/>
            <img src="@Model.Cards[i].Image" />

        </li>
    }

</ul>

